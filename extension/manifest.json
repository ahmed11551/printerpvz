{
  "manifest_version": 3,
  "name": "Печать ячеек ПВЗ",
  "version": "1.0.0",
  "description": "Автоматическая печать номеров ячеек на термопринтер для Турбо-ПВЗ (Ozon) и ВВПВЗ (Wildberries)",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5001/*",
    "https://*.ozon.ru/*",
    "https://*.wildberries.ru/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.ozon.ru/*",
        "https://*.wildberries.ru/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

