@echo off
chcp 65001 >nul
title Печать ячеек ПВЗ - Сервер
color 0A
cls

echo.
echo ================================================
echo      СЕРВЕР ПЕЧАТИ ЯЧЕЕК ПВЗ
echo ================================================
echo.

:: Проверка наличия EXE
if not exist "Печать_Ячеек_ПВЗ.exe" (
    echo [ОШИБКА] Файл Печать_Ячеек_ПВЗ.exe не найден!
    echo Убедитесь, что вы запускаете этот файл из правильной папки.
    echo.
    pause
    exit /b 1
)

:: Проверка config.json
if not exist "config.json" (
    echo [ПРЕДУПРЕЖДЕНИЕ] Файл config.json не найден!
    echo Программа будет использовать настройки по умолчанию.
    echo Создайте config.json для настройки принтера.
    echo.
    timeout /t 3 >nul
)

echo Запуск сервера...
echo.
echo Сервер будет доступен на: http://localhost:5001
echo.
echo Для остановки нажмите Ctrl+C
echo.

:: Запуск EXE
Печать_Ячеек_ПВЗ.exe

:: Если программа завершилась
echo.
echo Сервер остановлен.
pause

